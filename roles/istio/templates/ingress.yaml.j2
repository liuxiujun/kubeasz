---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: grafana
  namespace: istio-system
spec:
  rules:
  - host: grafana.istio.{{ CLUSTER_NAME }}.mxnavi.com
    http:
      paths:
      - backend:
          serviceName: grafana
          servicePort: 3000
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: prometheus
  namespace: istio-system
spec:
  rules:
  - host: prometheus.istio.{{ CLUSTER_NAME }}.mxnavi.com
    http:
      paths:
      - backend:
          serviceName: prometheus
          servicePort: 9090
